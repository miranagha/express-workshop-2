<div class="row">
    <p>update a new Blog post</p>
    <form name="sentMessage" method="PUT" action="/edit" id="contactForm" novalidate>
        <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
                <label>Title</label>
                <input type="text" name="title" class="form-control" placeholder="Blog Title" id="title" value="{{post.title}}" >
                <p class="help-block text-danger"></p>
            </div>
        </div>
        <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
                <label>Summary</label>
                <textarea rows="5" name="summary" class="form-control" placeholder="Summary" id="summary" required data-validation-required-message="Please enter the summary of the blog post."></textarea>
                <p class="help-block text-danger"></p>
            </div>
        </div>
        <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
                <label>Content of the Post</label>
                <textarea rows="5" name="content" class="form-control" placeholder="Contents" id="contents" required data-validation-required-message="Please enter the contents of the blog post."></textarea>
                <p class="help-block text-danger"></p>
            </div>
        </div>
        <br>
        <div id="success"></div>
        <div class="row">
            <div class="form-group col-xs-12">
                <button type="submit" class="btn btn-default" id="send">Send</button>
            </div>
        </div>
    </form>
     <div class="container">
        <div class="row">
            {{{body}}}
        </div>
    </div>
</div>